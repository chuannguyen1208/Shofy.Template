{
  "$schema": "http://json.schemastore.org/template",
  "author": "ChuanNguyen",
  "classifications": [
    "Web",
    "ASP.NET",
    "Clean Architecture"
  ],
  "name": "Clean Architecture Solution",
  "description": "A Clean Architecture Solution Template with ASP.NET Core.",
  "identity": "Shofy.ChuanNguyen.Solution.CSharp",
  "groupIdentity": "Shofy.ChuanNguyen.Solution",
  "shortName": "shofycn-sln",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "sourceName": "Shofy",
  "preferNameDirectory": true,
  "symbols": {
    "ClientFramework": {
      "type": "parameter",
      "datatype": "choice",
      "choices": [
        {
          "choice": "Dapper",
          "description": "Use Dapper"
        },
        {
          "choice": "EFCore",
          "description": "Use EF Core"
        },
        {
          "choice": "MongoDb",
          "description": "Use Mongo Db"
        }
      ],
      "defaultValue": "EFCore",
      "description": "The type of ORM to use"
    },
    "UseAngular": {
      "type": "computed",
      "value": "(ClientFramework == \"Angular\")"
    },
    "UseReact": {
      "type": "computed",
      "value": "(ClientFramework == \"React\")"
    },
    "UseApiOnly": {
      "type": "computed",
      "value": "(ClientFramework == \"None\")"
    },
    "UseSQLite": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "false",
      "description": "Whether to use SQLite instead of LocalDB."
    },
    "UseLocalDB": {
      "type": "computed",
      "value": "(!UseSQLite)"
    }
  },
  "sources": [
    {
      "source": "./",
      "target": "./",
      "exclude": [
        ".template.config/**/*",
        "templates/**/*",
        "**/*.filelist",
        "**/*.user",
        "**/*.lock.json",
        "*.nuspec"
      ],
      "rename": {
      },
      "modifiers": [
      ]
    }
  ]
}